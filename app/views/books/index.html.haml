%h1 Listing books

%table
  %thead
    %tr
      %th Title
      %th Description

  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.description
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Destroy', book, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Book', new_book_path

%form
  %p= select_tag "tags", options_from_collection_for_select(@tags, "id", "name")
  %span= link_to 'Search', { controller: 'tags', action: 'show', tag_name: 'Ruby' }
